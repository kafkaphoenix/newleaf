{
    "creature": {
        "ctags": ["transform"]
    },
    "player": {
        "inherits": ["creature"],
        "ctags": ["activeCamera", "activeInput"],
        "components": {
            "body": "player",
            "camera": {
                "type": "perspective",
                "fov": 90,
                "mode": "3D"
            },
            "input": {
                "mode": "3D",
                "translationSpeed": 40,
                "verticalSpeed": 50
            },
            "rigidBody": {
                "isKinematic": true
            }
        }
    },
    "chicken": {
        "inherits": ["creature"]
    }
}